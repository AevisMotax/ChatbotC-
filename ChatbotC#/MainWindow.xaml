<Window x:Class="ChatbotC_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatbotC_"
        mc:Ignorable="d"
        Title="ChatBot" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Chat Display -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatPanel" Margin="10"/>
        </ScrollViewer>

        <!-- User Input and Button -->
        <DockPanel Grid.Row="1" Margin="10">
            <TextBox x:Name="UserInput" DockPanel.Dock="Left" Width="280" Margin="0,0,10,0" TextChanged="UserInput_TextChanged" />
            <Button x:Name="SendButton" Content="Send" Width="74" Click="SendButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
